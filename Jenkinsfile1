pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/110-Shivanand/jenk-ins.git'
            }
        }

        stage('Compile Java Code') {
            steps {
                // Compiling the Java file
                bat 'javac linked_list.java'
            }
        }

        stage('Run Java Program') {
            steps {
                // Running the compiled Java program
                bat 'java linked_list'
            }
        }
    }

    post {
        success {
            echo 'Java program ran successfully.'
        }
        failure {
            echo 'Java build or run failed.'
        }
    }
}
