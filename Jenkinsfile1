pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/110-Shivanand/jenk-ins.git'
            }
        }

        stage('Compile Java Code') {
            steps {
                // Compile both main class and test class
                bat 'javac linked_list.java test.java'
            }
        }

        stage('Run Main Program') {
            steps {
                // Run the main program
                bat 'java linked_list'
            }
        }

        stage('Run Tests') {
            steps {
                // Run the test program
                bat 'java test'
            }
        }
    }

    post {
        success {
            echo 'Java program and test ran successfully.'
        }
        failure {
            echo 'Java build, run, or test failed.'
        }
    }
}
