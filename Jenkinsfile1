pipeline {
    agent any

    environment {
        PYTHON_VERSION = 'python'  // Assuming python is installed and in PATH
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/110-Shivanand/jenk-ins.git'
            }
        }

        stage('Run Python Script') {
            steps {
                bat 'python linked_list.py'
            }
        }

        stage('Run Unit Tests') {
            steps {
                bat 'python -m unittest discover tests'
            }
        }
    }

    post {
        success {
            echo 'Build and tests completed successfully.'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}
